{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": ["eslint:recommended"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "plugins": ["@typescript-eslint"],
  "root": true,
  "rules": {
    "quotes": "warn",
    "no-console": "warn",
    "no-extra-boolean-cast": "off",
    "no-unreachable": "warn",
    "no-unused-vars": "warn",
    "react-hooks/exhaustive-deps": "off"
  }
}
